<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- PRODUCT PRODUCT INHERIT VIEWS -->

        <record id="airac_product_product_form_inherit" model="ir.ui.view">
            <field name="name">airac.product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//header//button[last()]" position="after">
                    <button string="SKU Clientes" type="action" name="airac_website_sale.airac_customer_sku_action" attrs="{'invisible': [('airac_web_customer_ids', '=', False)]}"/>
                </xpath>
                
                <xpath expr="//page[@name='sales']//group[@name='sale']" position="after">
                    <separator string="Clientes website"/>
                    <field name="airac_web_customer_ids"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>